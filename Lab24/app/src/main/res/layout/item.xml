<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1,3,5">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <!-- Cột 0: Ảnh -->
        <ImageView
            android:id="@+id/imgPhoto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:contentDescription="Image"
            android:src="@drawable/ic_launcher_foreground" />

        <!-- Cột 1: Label Mua TM -->
        <TextView
            android:id="@+id/txtBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="MuaTM:"
            android:textSize="16sp" />

        <!-- Cột 2: Giá trị mua TM -->
        <TextView
            android:id="@+id/txtBuyCash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:text="16220"
            android:textColor="#F44336"
            android:textSize="16sp" />

        <!-- Cột 3: Label Bán TM -->
        <TextView
            android:id="@+id/txtSell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:gravity="center_vertical|left"
            android:text="BanTM:"
            android:textSize="16sp" />

        <!-- Cột 4: Giá trị bán TM -->
        <TextView
            android:id="@+id/txtSellCash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:text="16370"
            android:textColor="#F44336"
            android:textSize="16sp" />

        <!-- Cột 5: Trống -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="invisible" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Cột 0: Trống thay cho ảnh -->
        <TextView
            android:id="@+id/txtType"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="USD"
            android:textColor="#F44336"
            android:textSize="16sp" />

        <!-- Cột 1: Type -->

        <!-- Cột 2: Mua CK -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="MuaCK"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtBuybyTransfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:text="22920"
            android:textColor="#F44336"
            android:textSize="16sp" />

        <!-- Cột 3: Bán CK -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:gravity="center_vertical|left"
            android:text="BanCK:"
            android:textSize="16sp" />

        <!-- Cột 4: Giá trị bán CK -->
        <TextView
            android:id="@+id/txtSellbyTransfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:text="23000"
            android:textColor="#F44336"
            android:textSize="16sp" />

        <!-- Cột 5: Trống -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="invisible" />
    </TableRow>

</TableLayout>
